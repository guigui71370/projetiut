<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:columnCount="10"
    android:background="@color/colorPrimary"
    android:clickable="true">
    <TextView
        android:id="@+id/resultat_popup_messace-textView"
        android:text="Fin de partie!"
        android:layout_row="1"
        android:layout_columnSpan="7"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="25dp"
        />

    <Button
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/resultat_popup_rejouer-btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_gravity="center"
        android:background="@android:color/holo_green_light"
        android:text="Rejouer"
        />

    <Button
        android:id="@+id/resultat_popup_menu-btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_gravity="center"
        android:background="@android:color/holo_orange_dark"
        android:layout_margin="10dp"
        android:text="Retour au menu" />


</GridLayout>