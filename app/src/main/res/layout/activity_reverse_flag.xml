<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reverse_flag_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange">

  <ImageView
      android:id="@+id/activity_flag_IA_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      app:layout_constraintTop_toBottomOf="@+id/acivity_flag_player_img"
      android:layout_marginTop="20dp"
      app:srcCompat="@mipmap/ghost"
      android:contentDescription="@string/ghostPicture"/>

  <GridLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_column="1"
      android:layout_row="2"
      android:layout_marginTop="10dp"
      app:layout_constraintTop_toBottomOf="@+id/activity_flag_IA_img"
      tools:context="com.example.cassa.entrainementprojettut.flag.FlagActivity">

    <!-- Ligne 0 -->
    <LinearLayout
        android:id="@+id/truc"
        android:layout_width="match_parent"
        android:layout_columnSpan="2"
        android:layout_row="0">

      <GridLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageView
            android:id="@+id/activity_reverse_flag_drapeau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/france"
            android:layout_marginLeft="170dp"
            android:layout_marginStart="170dp" />

        <TextView
            android:id="@+id/activity_reverse_flag_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="170dp"
            android:layout_marginStart="170dp"
            android:text="X"
            android:textSize="50sp"/>

      </GridLayout>

    </LinearLayout>

    <!-- Ligne 1 -->
    <Button
        android:id="@+id/activity_reverse_flag_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pays 1"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_green_light"
        android:layout_row="1"
        android:layout_column="0"/>

    <Button
        android:id="@+id/activity_reverse_flag_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pays 2"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_row="1"
        android:layout_column="1" />

    <!-- Ligne 2 -->
    <Button
        android:id="@+id/activity_reverse_flag_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pays 3"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="150dp"
        android:background="@android:color/holo_red_light"
        android:layout_row="2"
        android:layout_column="0"/>

    <Button
        android:id="@+id/activity_reverse_flag_name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pays 4"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="150dp"
        android:background="@android:color/holo_orange_light"
        android:layout_row="2"
        android:layout_column="1"/>

  </GridLayout>
</android.support.v7.widget.LinearLayoutCompat>