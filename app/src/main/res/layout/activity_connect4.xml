<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Chronometer
        android:id="@+id/activity_connect4_chrono_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size"
        android:textStyle="bold"
        android:textColor="@color/colorGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="110dp"/>

    <android.support.v7.widget.GridLayout
        xmlns:app="http://schemas.android.com/apk/lib/android.support.v7.widget.GridLayout"
        android:id="@+id/activity_connect4_supergrid_gridlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="7"
        app:rowCount="6"
        android:layout_gravity="center"
        app:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/activity_connect4_chrono_chronometer">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/test"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:background="@drawable/star"
            />
    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>