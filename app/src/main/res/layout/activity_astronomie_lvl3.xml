<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_astronomie_lvl3_soleil_imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/soleil"
        android:contentDescription="Soleil"
        app:layout_constraintBottom_toTopOf="@+id/activity_astronomie_lvl3_textBoxConteneur_linearLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/activity_astronomie_lvl3_textBoxConteneur_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/activity_astronomie_lvl3_mercure_textViewConteneur"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:background="@color/colorTransparentGray"
            android:contentDescription="Mercure"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/activity_astronomie_lvl3_venus_textViewConteneur"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:background="@color/colorTransparentGray"
            android:contentDescription="Venus"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/activity_astronomie_lvl3_terre_textViewConteneur"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:background="@color/colorTransparentGray"
            android:contentDescription="Terre"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/activity_astronomie_lvl3_mars_textViewConteneur"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:background="@color/colorTransparentGray"
            android:contentDescription="Mars"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/activity_astronomie_lvl3_jupiter_textViewConteneur"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:background="@color/colorTransparentGray"
            android:contentDescription="Jupiter"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/activity_astronomie_lvl3_saturne_textViewConteneur"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:background="@color/colorTransparentGray"
            android:contentDescription="Saturne"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/activity_astronomie_lvl3_uranus_textViewConteneur"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:background="@color/colorTransparentGray"
            android:contentDescription="Uranus"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/activity_astronomie_lvl3_neptune_textViewConteneur"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:background="@color/colorTransparentGray"
            android:contentDescription="Neptune"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="32sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_astronomie_lvl3_linearLayoutPlanet_linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_astronomie_lvl3_textBoxConteneur_linearLayout"
        app:layout_constraintVertical_bias="0.19">

        <ImageView
            android:id="@+id/activity_astronomie_lvl3_mercure_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:transitionName="Mercure"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/activity_astronomie_lvl3_venus_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:transitionName="Venus"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/activity_astronomie_lvl3_terre_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:transitionName="Terre"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/activity_astronomie_lvl3_mars_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:transitionName="Mars"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/activity_astronomie_lvl3_jupiter_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:transitionName="Jupiter"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/activity_astronomie_lvl3_saturne_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:transitionName="Saturne"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/activity_astronomie_lvl3_uranus_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:transitionName="Uranus"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/activity_astronomie_lvl3_neptune_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:transitionName="Neptune"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="111dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_astronomie_lvl3_linearLayoutPlanet_linearLayout">

        <TextView
            android:id="@+id/activity_astronomie_lvl3_planetName1_textView"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/activity_astronomie_lvl3_planetName2_textView"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/activity_astronomie_lvl3_planetName3_textView"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/activity_astronomie_lvl3_planetName4_textView"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/activity_astronomie_lvl3_planetName5_textView"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/activity_astronomie_lvl3_planetName6_textView"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/activity_astronomie_lvl3_planetName7_textView"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/activity_astronomie_lvl3_planetName8_textView"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <Button
        android:id="@+id/activity_astronomie_lvl3_verifier_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Vérifier"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/activity_astronomie_lvl3_textBienPlace_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:text="Ordre des nom des planetes : "
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_astronomie_lvl3_textBoxConteneur_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_astronomie_lvl3_planeteBienPlace_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="8dp"
        android:text="Ordre des planetes : "
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_astronomie_lvl3_textBoxConteneur_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_astronomie_lvl3_textBienPlace_textView" />

