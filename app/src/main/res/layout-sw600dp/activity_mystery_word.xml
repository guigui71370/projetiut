                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/activity_mysteryWord_P_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textOff="p"
                android:textOn="p"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_mysteryWord_keyboard_row2_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/activity_mysteryWord_Q_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textOff="q"
                android:textOn="q"
                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/activity_mysteryWord_S_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textOff="s"
                android:textOn="s"
                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/activity_mysteryWord_D_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textOff="d"
                android:textOn="d"
                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/activity_mysteryWord_F_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textOff="f"
                android:textOn="f"
                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/activity_mysteryWord_G_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
