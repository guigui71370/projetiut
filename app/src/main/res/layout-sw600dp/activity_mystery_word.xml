                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/activity_mysteryWord_K_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textOff="k"
                android:textOn="k"
                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/activity_mysteryWord_L_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textOff="l"
