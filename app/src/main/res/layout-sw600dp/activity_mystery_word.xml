                android:textOff="r"
                android:textOn="r"
                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/activity_mysteryWord_T_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textOff="t"
                android:textOn="t"
                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/activity_mysteryWord_Y_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textOff="y"
                android:textOn="y"
                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/activity_mysteryWord_U_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textOff="u"
                android:textOn="u"
                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/activity_mysteryWord_I_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textOff="i"
                android:textOn="i"
                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/activity_mysteryWord_O_button"
