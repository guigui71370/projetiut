                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/activity_mysteryWord_M_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textOff="m"
                android:textOn="m"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_mysteryWord_keyboard_row3_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/activity_mysteryWord_W_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
